{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "outDir": "./build",
    "rootDirs": ["src", "tests"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src", "tests"]
}