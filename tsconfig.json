{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "strict": true,
    "moduleResolution": "nodenext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "outDir": "./build",
    "rootDirs": ["src", "tests"]
  },
  "include": ["src", "tests"]
}